# Development Environment Configuration
ENVIRONMENT=dev
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# DynamoDB Tables
DDB_CONVERSATION_TABLE=AaiConversationHistory-dev
DDB_TICKETS_TABLE=SupportTickets-dev

# S3 Buckets
S3_BUCKET=support-agent-search-results-dev
S3_RAW_DATA_BUCKET=agentic-rag-raw-data-dev

# OpenSearch
OPENSEARCH_DOMAIN=agentic-rag-knowledge-base-dev
OPENSEARCH_INDEX=support-agent-knowledge

# SageMaker
SAGEMAKER_ENDPOINT=minilm-reranker-dev

# Step Functions
STEP_FUNCTION_ARN=arn:aws:states:${AWS_REGION}:${AWS_ACCOUNT_ID}:stateMachine:AaiKnowledgeRetrievalRagPipeline-dev

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=512
TTL_DAYS=7

# Bedrock
LLM_MODEL=amazon.titan-text-lite-v1
EMBEDDING_MODEL=amazon.titan-embed-text-v1

# Monitoring
LOG_LEVEL=DEBUG
ENABLE_XRAY=true

# Email Configuration
SUPPORT_EMAIL=support-dev@yourcompany.com
SES_REGION=us-east-1