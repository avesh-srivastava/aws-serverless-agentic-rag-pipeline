# Production Environment Configuration
ENVIRONMENT=prod
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=

# DynamoDB Tables
DDB_CONVERSATION_TABLE=AaiConversationHistory-prod
DDB_TICKETS_TABLE=SupportTickets-prod

# S3 Buckets
S3_BUCKET=support-agent-search-results-prod
S3_RAW_DATA_BUCKET=agentic-rag-raw-data-prod

# OpenSearch
OPENSEARCH_DOMAIN=agentic-rag-knowledge-base-prod
OPENSEARCH_INDEX=support-agent-knowledge

# SageMaker
SAGEMAKER_ENDPOINT=minilm-reranker-prod

# Step Functions
STEP_FUNCTION_ARN=arn:aws:states:${AWS_REGION}:${AWS_ACCOUNT_ID}:stateMachine:AaiKnowledgeRetrievalRagPipeline-prod

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024
TTL_DAYS=30

# Bedrock
LLM_MODEL=amazon.titan-text-lite-v1
EMBEDDING_MODEL=amazon.titan-embed-text-v1

# Monitoring
LOG_LEVEL=INFO
ENABLE_XRAY=true

# Email Configuration
SUPPORT_EMAIL=support@yourcompany.com
SES_REGION=ap-south-1