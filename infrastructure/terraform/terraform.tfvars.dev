# Development Environment Configuration
# Minimal configuration for development and testing

# Environment Configuration
environment = "dev"
aws_region  = "ap-south-1"

# OpenSearch Configuration (Minimal for dev)
opensearch_domain          = "agentic-rag-kb"
opensearch_instance_type   = "t3.small.search"
opensearch_instance_count  = 1
opensearch_volume_size     = 20

# DynamoDB Configuration
conversation_table_name    = "AaiConversationHistory-dev"
support_tickets_table_name = "AaiSupportTickets-dev"

# Lambda Configuration (Basic)
lambda_timeout     = 300
lambda_memory_size = 512

# Application Configuration
ttl_days      = 7
support_email = "support@yourcompany.com"

# Common Tags
common_tags = {
  Project     = "AgenticRAG"
  Environment = "dev"
  ManagedBy   = "Terraform"
  Application = "AI-Customer-Support"
  Owner       = "DevTeam"
  CostCenter  = "Development"
}

# Model Configuration
hf_model_id = "cross-encoder/ms-marco-MiniLM-L-6-v2"
hf_task     = "text-classification"
llm_model   = "amazon.titan-text-lite-v1"
embed_model = "amazon.titan-embed-text-v2:0"

# Agent-Specific Configuration (Development)
agent_configs = {
  ingestion = {
    memory_size = 1024
    timeout     = 900
    environment_vars = {
      CHUNK_BATCH_SIZE = "20"
      OUTPUT_PREFIX    = "processed/chunks/logs/"
      CHUNK_CHAR_SIZE  = "1200"
      CHUNK_OVERLAP    = "200"
    }
  }
  retrieval = {
    memory_size = 512
    timeout     = 300
    environment_vars = {
      # Basic retrieval configuration
    }
  }
  conversation = {
    memory_size = 512
    timeout     = 300
    environment_vars = {
      PROMPT_MAX_CHARS = "3500"
      MAX_TURNS        = "5"
    }
  }
  escalation = {
    memory_size = 256
    timeout     = 60
    environment_vars = {
      # Basic escalation configuration
    }
  }
  orchestration = {
    memory_size = 256
    timeout     = 60
    environment_vars = {
      # Basic orchestration configuration
    }
  }
}